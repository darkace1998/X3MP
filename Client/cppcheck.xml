<?xml version="1.0" encoding="UTF-8"?>
<project version="1">
    <root name="." />
    <builddir>cppcheck-build</builddir>
    <platform>Win32</platform>
    <analyze-all-vs-configs>true</analyze-all-vs-configs>
    
    <!-- Include paths -->
    <includedir>
        <dir name="." />
    </includedir>
    
    <!-- Source paths to analyze -->
    <paths>
        <dir name="." />
    </paths>
    
    <!-- Exclude patterns -->
    <exclude>
        <path name="pugixml.cpp" />
        <path name="pugixml.hpp" />
        <path name="pugiconfig.hpp" />
        <path name="*.vcxproj*" />
    </exclude>
    
    <!-- Libraries to check against -->
    <libraries>
        <library>windows</library>
        <library>microsoft_sal</library>
        <library>std</library>
    </libraries>
    
    <!-- Enable additional checks -->
    <check-config>true</check-config>
    <check-headers>true</check-headers>
    <check-unused-templates>true</check-unused-templates>
    
    <!-- Suppressions for third-party code or false positives -->
    <suppressions>
        <suppression>
            <id>missingInclude</id>
            <fileName>*</fileName>
        </suppression>
        <suppression>
            <id>unusedFunction</id>
            <fileName>dllmain.cpp</fileName>
        </suppression>
    </suppressions>
</project>